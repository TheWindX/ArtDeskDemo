<Window x:Class="ns_artDesk.ControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ns_artDesk"
        mc:Ignorable="d"
        Title="ControlWindow" Height="300" Width="300" WindowStyle="None" Topmost="True" WindowState="Maximized" Background="{x:Null}" ResizeMode="NoResize" AllowsTransparency="True" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32px"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="mButtonFun" Width="64" HorizontalAlignment="Right" Content="娱乐台" Click="mButtonFun_Click"/>
            <Button x:Name="mButtonArt" Width="64" Grid.Column="1" HorizontalAlignment="Left" Content="工作台" Click="mButtonArt_Click"></Button>
        </Grid>

    </Grid>
</Window>
